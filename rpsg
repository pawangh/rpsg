import tkinter
import tkinter.messagebox
import random
screen = tkinter.Tk()

screen.geometry("400x400")

cc = ["rock","paper","scissor"]

def activation(pchoice):
    cslect=random.randint(0,2)
    cchoice=cc[cslect]
    po.config(text="your option :"+pchoice)
    co.config(text="computer option :"+cchoice)

rb = tkinter.Button(screen,text="rock",command=lambda:activation("rock"))
pb = tkinter.Button(screen,text="paper",command=lambda:activation("paper"))
sb = tkinter.Button(screen,text="scissors",command=lambda:activation("sissors"))
title = tkinter.Label(screen,text="rock paper scissors")
options = tkinter.Label(screen,text="options")
stats = tkinter.Label(screen,text="stats")
po = tkinter.Label(screen,text="your option:")
co = tkinter.Label(screen,text="computer option:")
cs = tkinter.Label(screen,text="computer score:")
ps = tkinter.Label(screen,text="your score:")

rb.grid(row = 3,column=1)
pb.grid(row = 3,column=2)
sb.grid(row = 3,column=3)
title.grid(row = 1,column=2)
options.grid(row = 2,column=1)
stats.grid(row = 4,column=1)
po.grid(row = 5,column=1)
co.grid(row = 6,column=1)
cs.grid(row = 6,column=2)
ps.grid(row = 5,column=2)


screen.mainloop()